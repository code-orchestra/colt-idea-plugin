<idea-plugin version="2">

  <id>com.codeOrchestra.plugin.colt</id>
  <name>COLT Plugin</name>
  <version>1.0</version>
  <vendor email="support@codeorchestra.com" url="http://codeorchestra.com/">CodeOrchestra</vendor>

  <depends>com.intellij.flex</depends>

    <description><![CDATA[
      COLT live coding tool integration plugin
      ]]></description>

  <idea-version since-build="107.105"/>

  <application-components>
      <component><implementation-class>codeOrchestra.plugin.COLTSettings</implementation-class></component>
  </application-components>

  <project-components>
    <component><implementation-class>codeOrchestra.plugin.view.COLTConsole</implementation-class></component>
  </project-components>

  <actions>
      <group id="COLT.Menu" text="COLT" description="COLT plugin menu">
          <add-to-group group-id="MainMenu" anchor="after" relative-to-action="RunMenu" />
          <action id="colt.launch" class="codeOrchestra.plugin.actions.COLTLaunchAction" text="Launch COLT" description="Launch COLT" />
          <action id="colt.export" class="codeOrchestra.plugin.actions.COLTExportAction" text="Export COLT Project" description="Save COLT project file" />
          <separator/>
          <action id="colt.compile.live" class="codeOrchestra.plugin.actions.COLTLiveBaseCompileAction" text="Live Build" description="Run Base Live Compilation" />
          <action id="colt.compile.production" class="codeOrchestra.plugin.actions.COLTProductionCompileAction" text="Production Build" description="Run Production Compilation" />
          <separator/>
          <action id="colt.compile.run.live" class="codeOrchestra.plugin.actions.COLTLiveBaseCompileAndRunAction" text="Live Build and Exec Run" description="Live Build and Exec Run" />
          <action id="colt.compile.run.production" class="codeOrchestra.plugin.actions.COLTProductionCompileAndRunAction" text="Production Build and Exec Run" description="Production Build and Exec Run" />
      </group>
  </actions>

</idea-plugin>