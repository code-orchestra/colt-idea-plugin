<idea-plugin version="2">

  <id>com.codeOrchestra.plugin.Colt</id>
  <name>COLT Plugin</name>
  <version>1.0</version>
  <vendor email="support@codeorchestra.com" url="http://codeorchestra.com/">CodeOrchestra</vendor>

  <depends>com.intellij.flex</depends>

  <description><![CDATA[ COLT live coding tool integration plugin ]]></description>

  <idea-version since-build="107.105"/>

  <application-components>
      <component><implementation-class>codeOrchestra.colt.as.plugin.ColtSettings</implementation-class></component>
  </application-components>

  <project-components>
      <component><implementation-class>codeOrchestra.colt.as.plugin.view.ColtConsole</implementation-class></component>
      <component><implementation-class>codeOrchestra.colt.core.rpc.discovery.FileBasedColtServiceLocator</implementation-class></component>
  </project-components>

  <actions>
      <group id="COLT.Menu" text="COLT" description="COLT plugin menu">
          <add-to-group group-id="MainMenu" anchor="after" relative-to-action="RunMenu" />
          <action id="colt.launch" class="codeOrchestra.colt.as.plugin.actions.ColtLaunchAction" text="Launch COLT" description="Launch COLT" />
          <action id="colt.export" class="codeOrchestra.colt.as.plugin.actions.ColtExportAction" text="Export COLT Project" description="Save COLT project file" />
          <separator/>
          <action id="colt.compile.live" class="codeOrchestra.colt.as.plugin.actions.ColtLiveBaseCompileAction" text="Live Build" description="Run Base Live Compilation" />
          <action id="colt.compile.production" class="codeOrchestra.colt.as.plugin.actions.ColtProductionCompileAction" text="Production Build" description="Run Production Compilation" />
          <separator/>
          <action id="colt.compile.run.live" class="codeOrchestra.colt.as.plugin.actions.ColtLiveBaseCompileAndRunAction" text="Live Build and Exec Run" description="Live Build and Exec Run" />
          <action id="colt.compile.run.production" class="codeOrchestra.colt.as.plugin.actions.ColtProductionCompileAndRunAction" text="Production Build and Exec Run" description="Production Build and Exec Run" />
      </group>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
      <configurationType implementation="codeOrchestra.colt.core.plugin.run.ColtConfigurationType"/>
  </extensions>

</idea-plugin>